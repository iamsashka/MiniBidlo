@model MiniBidlo.Models.Product

<link href="~/css/productdetail.css" rel="stylesheet" />

<body>
    <div class="container">
        <div class="card">
            <img alt="@Model.Name" src="~/image/@Model.ImageUrl" />
            <div class="card-content">
                <h2>@Model.Name</h2>
                <div class="price">@Model.Price</div>
                <div class="description">@Model.Description</div>
                <div class="features">
                    <h3>Описание товара</h3>
                    <p>@Model.Description</p>
                    <ul>
                        <li>Свежие розы</li>
                        <li>Идеально для любого торжества</li>
                        <li>Красивый и элегантный дизайн</li>
                    </ul>
                </div>
                <div class="specifications">
                    <h3>Характеристики</h3>
                    <ul>
                        <li>Количество: @Model.StockQuantity</li>
                        <li>Цвет: красный</li>
                        <li>Материал: свежие цветы</li>
                    </ul>
                </div>
                <button class="buy-button" onclick="addToCart(@Model.IdProduct)">Купить</button>
            </div>
        </div>
    </div>
</body>

<script>
    function addToCart(productId) {
        alert(`Товар с ID ${productId} добавлен в корзину!`);
    }
</script>
