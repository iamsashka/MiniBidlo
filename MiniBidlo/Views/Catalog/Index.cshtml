@model IEnumerable<MiniBidlo.Models.Product>

<link href="~/css/catalog.css" rel="stylesheet" />
<main>
    <div class="products">
        @foreach (var item in Model)
        {
            <div class="product">
                <img alt="Букет Роз" src="image/@item.ImageUrl" />
                <h3>@item.Name</h3>
                <p>@item.Description</p>
                <div class="price">@item.Price</div>
                <div class="price">@item.CategoryId</div>
                <button><svg class="icon" width="16" height="16" fill="currentColor" viewBox="0 0 16 16"><path d="M1.5 1.5h2l1 9h9v2H3l-1-11H1.5V1.5z" /></svg> Купить</button>
                <div class="icons">
                    <svg class="icon-favorite" width="16" height="16" fill="currentColor" viewBox="0 0 16 16"><path d="M8 15S3 12 0 8C1.5 5 4 4 5 4c1 0 2 1 3 2s2-2 3-2c1 0 3.5 1 5 4-3 4-8 7-8 7z" /></svg>
                    <a asp-action="ProductDetail" asp-controller="Catalog" asp-route-id="@item.IdProduct" class="link">Подробнее</a>
                </div>
            </div>
            }
        </div>
</main>
