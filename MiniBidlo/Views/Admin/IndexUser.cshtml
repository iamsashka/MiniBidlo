@model IEnumerable<MiniBidlo.Models.User>

<h2>Все пользователи</h2>
<table class="table">
    <thead>
        <tr>
            <th>Логин</th>
            <th>Email</th>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Login</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("EditUser", "Admin", new { id = user.IdUser })">Редактировать</a>
                    <a class="btn btn-danger" href="@Url.Action("DeleteUser", "Admin", new { id = user.IdUser })">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" href="@Url.Action("CreateUser", "Admin")">Добавить пользователя</a>
