@model IEnumerable<MiniBidlo.Models.Product>

<h2>Все продукты</h2>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Цена</th>
            <th>Категория</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Category.CategoryName</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Edit", "Admin", new { id = product.IdProduct })">Редактировать</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Admin", new { id = product.IdProduct })">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" href="@Url.Action("Create", "Admin")">Добавить продукт</a>
