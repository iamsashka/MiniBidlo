@model MiniBidlo.Models.Category

<h1>Удалить категорию</h1>
<p>Вы уверены, что хотите удалить категорию <strong>@Model.CategoryName</strong>?</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a href="@Url.Action("ManageCategories")" class="btn btn-secondary">Отмена</a>
</form>
