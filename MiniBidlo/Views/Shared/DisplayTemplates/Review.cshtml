@model MiniBidlo.Models.Review

<div class="review">
    <div class="review-header">
        <span class="username">@Model.IdUserNavigation.Name</span>
        <span class="rating">
            @for (int i = 0; i < Model.Rating; i++)
            {
                <span class="star">★</span>
            }
        </span>
        <span class="date">@Model.CreatedAt.ToString("dd.MM.yyyy")</span>
    </div>
    <div class="comment">@Model.Comment</div>
</div>